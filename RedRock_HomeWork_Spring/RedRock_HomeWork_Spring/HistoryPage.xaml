<Page
    x:Class="RedRock_HomeWork_Spring.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RedRock_HomeWork_Spring"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
        </Grid.RowDefinitions>
        <CommandBar Grid.Row="0" VerticalAlignment="Top">
            <AppBarButton Icon="Back" Label="返回" Click="AppBarButton_Click"></AppBarButton>
        </CommandBar>
        <ScrollViewer Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock x:Name="htb" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="40"></TextBlock>
        </ScrollViewer>
    </Grid>
</Page>
